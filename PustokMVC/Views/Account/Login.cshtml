@model MemberLoginViewModel
<div style="display:flex;justify-content:center">
	<form method="post">
		<div class="login-form">
			<h4 class="login-title">Returning Customer</h4>
			<p><span class="font-weight-bold">I am a returning customer</span></p>
			<div class="row">
				<div class="col-md-12 col-12 mb--15">
					<label for="username">Enter your username here...</label>
					<input class="mb-0 form-control" asp-for="UserName" id="email1"
						   placeholder="Enter your username here...">
				</div>
				<div class="col-12 mb--20">
					<label for="password">Password</label>
					<input class="mb-0 form-control" asp-for="Password" id="login-password" placeholder="Enter your password">
				</div>
				<div class="col-md-12">
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>
					<button type="submit" class="btn btn-outlined">Login</button>
				</div>
			</div>
		</div>
	</form>
</div>